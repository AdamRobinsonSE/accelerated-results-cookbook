<%- include('partials/master-header') -%>

<!-- user name -->
<div class="container mt-5 text-light">
    <div class="row">
        <div class="col-md-6 mt-3 mb-3 mx-auto">
            <h1 class="text-center h1">Hey there, <%- user.userName %>!</h1>
            <p class="text-center h4 mt-3">Check out all the dessert recipes that you've added to your favorites!</p>
        </div>
    </div>
</div>

<!-- Desserts cards container -->
<div class="container mt-3">

    <!-- All Desserts Container -->
    <div class="row mt-5">
      <h3 class="text-light border-bottom border-3 mb-3 google-font display-4">All Desserts</h3>
      <% recipes.forEach(recipe => { %>
          <% if (recipe.recipe.type === 'Dessert') { %>
              <div class="col-sm mb-3 d-flex justify-content-center">
                  <div class="card text-center" style="width: 18rem;">
                      <img src="<%= recipe.recipe.image %>" class="card-img-top" alt="...">
                      <div class="card-body">
                          <p class="card-title"><strong><%= recipe.recipe.recipeName %></strong></p>
                          <a href="/recipes/<%= recipe.recipe._id %>" class="btn btn-outline-primary">View Recipe</a>
                      </div>
                  </div>
              </div>
          <% } %>
      <% }) %>
    </div>

    <!-- Gluten-Free Desserts Container -->
    <div class="row mt-5">
      <h3 class="text-light border-bottom border-3 mb-3 google-font display-4">Gluten-Free Desserts</h3>
      <% recipes.forEach(recipe => { %>
          <% if (recipe.recipe.type === 'Dessert' && recipe.recipe.glutenFree === true) { %>
              <div class="col-sm mb-3 d-flex justify-content-center">
                  <div class="card text-center" style="width: 18rem;">
                      <img src="<%= recipe.recipe.image %>" class="card-img-top" alt="...">
                      <div class="card-body">
                          <p class="card-title"><strong><%= recipe.recipe.recipeName %></strong></p>
                          <a href="/recipes/<%= recipe.recipe._id %>" class="btn btn-outline-primary">View Recipe</a>
                      </div>
                  </div>
              </div>
          <% } %>
      <% }) %>
    </div>

    <!-- Vegan Desserts Container -->
    <div class="row mt-5">
      <h3 class="text-light border-bottom border-3 mb-3 google-font display-4">Vegan Desserts</h3>
      <% recipes.forEach(recipe => { %>
          <% if (recipe.recipe.type === 'Dessert' && recipe.recipe.vegan === true) { %>
              <div class="col-sm mb-3 d-flex justify-content-center">
                  <div class="card text-center" style="width: 18rem;">
                      <img src="<%= recipe.recipe.image %>" class="card-img-top" alt="...">
                      <div class="card-body">
                          <p class="card-title"><strong><%= recipe.recipe.recipeName %></strong></p>
                          <a href="/recipes/<%= recipe.recipe._id %>" class="btn btn-outline-primary">View Recipe</a>
                      </div>
                  </div>
              </div>
          <% } %>
      <% }) %>
    </div>

    <!-- Vegetarian Desserts Container -->
    <div class="row mt-5">
      <h3 class="text-light border-bottom border-3 mb-3 google-font display-4">Vegetarian Desserts</h3>
      <% recipes.forEach(recipe => { %>
          <% if (recipe.recipe.type === 'Dessert' && recipe.recipe.vegetarian === true) { %>
              <div class="col-sm mb-3 d-flex justify-content-center">
                  <div class="card text-center" style="width: 18rem;">
                      <img src="<%= recipe.recipe.image %>" class="card-img-top" alt="...">
                      <div class="card-body">
                          <p class="card-title"><strong><%= recipe.recipe.recipeName %></strong></p>
                          <a href="/recipes/<%= recipe.recipe._id %>" class="btn btn-outline-primary">View Recipe</a>
                      </div>
                  </div>
              </div>
          <% } %>
      <% }) %>
    </div>

</div>

<%- include('partials/profile-footer') -%>