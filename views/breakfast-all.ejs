<%- include('partials/profile-recipe-groceries-header') -%>

<!-- breakfast card container -->
<div class="container mt-5 pt-5">

    <!-- links to the other breakfast recipe types -->
    <div class="mb-4">
        <h3 class="text-light border-bottom border-3 mb-3">All Breakfast Recipes</h3>
        <ul class="nav justify-content-center">
            <li class="nav-item">
              <a class="nav-link text-light" aria-current="page" href="/breakfast-recipes/breakfast-all">All</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-light" href="/breakfast-recipes/breakfast-gluten-free">Gluten-Free</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-light" href="/breakfast-recipes/breakfast-vegan">Vegan</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-light" href="/breakfast-recipes/breakfast-vegetarian">Vegetarian</a>
            </li>
        </ul>
    </div>
    
    <!-- cards for ALL breakfast recipes-->
    <div class="row">
      <% recipes.forEach(recipe => { %>
          <% if (recipe.type === 'Breakfast') { %>
              <div class="col-sm mb-3 d-flex justify-content-center">
                  <div class="card text-center" style="width: 18rem;">
                      <img src="<%= recipe.image %>" class="card-img-top" alt="...">
                      <div class="card-body">
                          <p class="card-title"><strong><%= recipe.recipeName %></strong></p>
                          <a href="/recipes/<%= recipe._id %>" class="btn btn-outline-primary">View Recipe</a>
                      </div>
                  </div>
              </div>
          <% } %>
      <% }) %>
    </div>
</div>

<%- include('partials/profile-recipe-footer') -%>